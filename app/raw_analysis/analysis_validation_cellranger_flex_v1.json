{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "id": "https://github.com/imperial-genomics-facility/IGFPortal",
    "title": "IGF Cellranger Multi analysis validation schema for Flex analysis",
    "description": "Schema for validation of Cellranger multi Flex analysis yaml file",
    "type": "object",
    "version": "0.0.1",
    "$defs": {
        "featureTypes": {
            "type": "string",
            "enum": [
                "Gene Expression",
                "Antibody Capture",
                "CRISPR Guide Capture"
            ]
        },
        "cellrangerGroup": {
            "type": "string",
            "pattern": "^[A-Z0-9-_]+$"
        },
        "sampleEntry": {
            "type": ["object", "string"],
            "properties": {
                "feature_types": {
                    "$ref": "#/$defs/featureTypes"
                },
                "cellranger_group": {
                    "$ref": "#/$defs/cellrangerGroup"
                }
            }
        },
        "scanpyConfig": {
            "type": "object",
            "properties": {
                "TEMPLATE_FILE": {
                    "type": "string"
                },
                "IMAGE_FILE": {
                    "type": "string"
                },
                "MITO_PREFIX": {
                    "type": "string"
                },
                "RUN_SCRUBLET": {
                    "type": "boolean"
                },
                "RUN_CELLCYCLE_SCORE": {
                    "type": "boolean"
                },
                "CELL_MARKER_LIST": {
                    "type": "string"
                },
                "CELL_MARKER_SPECIES": {
                    "type": "string"
                },
                "S_GENES": {
                    "type": "string"
                },
                "G2M_GENES": {
                    "type": "string"
                },
                "CELL_MARKER_MODE": {
                    "type": "string",
                    "enum": [
                        "NON-VDJ",
                        "VDJ"
                    ]
                }
            },
            "required": [
                "TEMPLATE_FILE",
                "IMAGE_FILE",
                "MITO_PREFIX",
                "RUN_SCRUBLET",
                "RUN_CELLCYCLE_SCORE",
                "CELL_MARKER_LIST",
                "CELL_MARKER_SPECIES",
                "S_GENES",
                "G2M_GENES",
                "CELL_MARKER_MODE"
            ]
        },
        "referencePattern": {
            "contains": {
                "pattern": "^\\s?reference"
            },
            "minContains": 2,
            "maxContains": 2
        },
        "probeSetPattern": {
            "contains": {
                "pattern": "^\\s?probe-set"
            },
            "minContains": 1,
            "maxContains": 1
        },
        "geneExpressionSection": {
            "contains": {
                "pattern": "^\\[gene-expression\\]$"
            }
        },
        "featureSection": {
            "contains": {
                "pattern": "^\\[feature\\]$"
            }
        },
        "samplesSection": {
            "contains": {
                "pattern": "^\\[samples\\]$"
            }
        },
        "createBamPattern": {
            "contains": {
                "pattern": "^create-bam"
            }
        },
        "sampleHeaderPattern": {
            "contains": {
                "const": "sample_id,probe_barcode_ids,description"
            }
        },
        "sampleDataPattern": {
            "if": {
                "type": "array",
                "contains": {
                    "const": "sample_id,probe_barcode_ids,description"
                }
            },
            "then": {
                "type": "array",
                "items": {
                    "if": {
                        "type": "string",
                        "pattern": "^sample_id,probe_barcode_ids,description$"
                    },
                    "then": true,
                    "else": {
                        "if": {
                            "type": "string",
                            "not": {
                                "pattern": "^\\[|^#|^\\s*$|^\\s?reference|^\\s?probe-set|^\\s?create-bam|^\\s?r[12]-length|^\\s?chemistry|^\\s?expect-cells|^\\s?force-cells|^\\s?no-secondary|^\\s?check-library-compatibility|^\\s?include-introns"
                            }
                        },
                        "then": {
                            "pattern": "^[A-Za-z0-9_\\-,+|]+$"
                        }
                    }
                }
            }
        }
    },
    "properties": {
        "sample_metadata": {
            "type": "object",
            "uniqueItems": true,
            "minItems": 1,
            "patternProperties": {
                "^IGF[a-zA-Z0-9-_]+$": {
                    "$ref": "#/$defs/sampleEntry"
                }
            }
        },
        "analysis_metadata": {
            "type": "object",
            "properties": {
                "scanpy_config": {
                    "$ref": "#/$defs/scanpyConfig"
                },
                "cellranger_multi_config": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "allOf": [
                        {
                            "$ref": "#/$defs/referencePattern"
                        },
                        {
                            "$ref": "#/$defs/probeSetPattern"
                        },
                        {
                            "$ref": "#/$defs/geneExpressionSection"
                        },
                        {
                            "$ref": "#/$defs/featureSection"
                        },
                        {
                            "$ref": "#/$defs/samplesSection"
                        },
                        {
                            "$ref": "#/$defs/createBamPattern"
                        },
                        {
                            "$ref": "#/$defs/sampleHeaderPattern"
                        },
                        {
                            "$ref": "#/$defs/sampleDataPattern"
                        }
                    ]
                }
            },
            "required": [
                "cellranger_multi_config",
                "scanpy_config"]
        }
    },
    "required": [
        "sample_metadata",
        "analysis_metadata"]
}